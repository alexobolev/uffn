{% extends 'web/base.html.twig' %}

{% block title %}
  Sign in - {{ parent() }}
{% endblock %}

{% block body %}
  <div class="uf-login-page">
    <div class="uf-login-image d-none d-lg-flex">
    </div>
    <div class="uf-login-contents bg-light">
      <div class="uf-login-box">
        <header class="display-6 mb-5">Sign in</header>
        <div class="px-3 px-lg-0">
          <form action="{{ path('auth_login') }}" method="post">
            {% if error %}
              {#<p class="text-danger small">{{ error.messageKey|trans(error.messageData, 'security') }}</p>#}
              <p class="text-danger small">Didn't guess the password</p>
            {% endif %}
            <div class="form-floating">
              <input type="email" id="username" name="_username" required value="{{ last_username }}"
                     placeholder="name@example.com" class="form-control {% if error %}is-invalid{% endif %}">
              <label for="username" {% if error %}class="text-danger"{% endif %}>Email address</label>
            </div>
            <div class="form-floating">
              <input type="password" id="password" name="_password" required
                     placeholder="thestrongiestpasswordevah" class="form-control {% if error %}is-invalid{% endif %}">
              <label for="password" {% if error %}class="text-danger"{% endif %}>Password</label>
            </div>
            <input type="hidden" name="_target_path" value="{{ path('profile') }}"/>
            <button type="submit" class="btn btn-lg mt-3 w-100 {% if not error %}btn-primary{% else %}btn-danger{% endif %}">
              {% if not error %}
                Sign in
              {% else %}
                Try again
              {% endif %}
            </button>
          </form>
        </div>
        <div class="mt-3 mt-lg-4 pt-3 pt-lg-4" style="margin-bottom: 5em;">
          <p class="text-muted fw-bold">uffn (version)</p>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
